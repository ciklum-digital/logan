{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2019"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es5",
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "removeComments": true,
    "downlevelIteration": true,
    "noStrictGenericChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
