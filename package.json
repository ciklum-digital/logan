{
  "name": "logan",
  "description": "## Description",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://github.com/ciklum-digital/logan#readme",
  "main": "lerna.json",
  "scripts": {
    "format": "prettier --write \"packages/**/*.ts\"",
    "commit": "npx git-cz",
    "lint": "npx tslint packages/**/*.ts --project ./tsconfig.json",
    "lint:fix": "yarn lint --fix",
    "test": "npx jest",
    "build": "npx lerna run build",
    "ci:lint": "yarn lint",
    "ci:test": "yarn test --config=./jest.ci.config.js | npx coveralls",
    "ci:sonar": "npx sonar-scanner",
    "ci:build": "yarn build",
    "ci:publish": "npx lerna publish"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^24.0.18",
    "coveralls": "^3.0.6",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.2.5",
    "npx": "^10.2.0",
    "prettier": "^1.18.2",
    "sonar-scanner": "^3.1.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-origin-ordered-imports-rule": "^1.2.2",
    "tslint-sonarts": "^1.9.0",
    "typescript": "3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "bugs": {
    "url": "https://github.com/ciklum-digital/logan/issues"
  },
  "prettier": {
    "semi": true,
    "endOfLine": "lf",
    "tabWidth": 2,
    "printWidth": 100,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "singleQuote": true
  },
  "lint-staged": {
    "*.ts": ["prettier --write", "git add"]
  }
}
